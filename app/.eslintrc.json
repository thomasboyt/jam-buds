{
  "extends": [
    "plugin:vue/strongly-recommended",
    "eslint:recommended",
    "prettier",
    "@nuxtjs/eslint-config-typescript"
  ],
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off",

    // Currently broken: https://github.com/eslint/eslint/issues/11899
    "require-atomic-updates": "off",

    "vue/require-default-prop": "off",
    "vue/require-prop-types": "off",
    "vue/order-in-components": [
      "error",
      {
        "order": [
          "el",
          "name",
          "parent",
          "functional",
          ["delimiters", "comments"],
          ["components", "directives", "filters"],
          "extends",
          "mixins",
          "inheritAttrs",
          "model",
          ["props", "propsData"],
          "head",
          "fetch",
          "asyncData",
          "data",
          "computed",
          "watch",
          "LIFECYCLE_HOOKS",
          "methods",
          ["template", "render"],
          "renderError"
        ]
      }
    ]
  }
}
