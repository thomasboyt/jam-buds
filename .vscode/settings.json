{
  // Note: feature tests use a different TypeScript dep
  // some day I'll use lerna or something to coordinate
  "typescript.tsdk": "./api/node_modules/typescript/lib",
  "[javascript]": {
    "editor.formatOnSave": true
  },
  "[vue]": {
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.formatOnSave": true
  },
  "eslint.validate": ["javascript", "javascriptreact", "vue", "typescript"],
  "eslint.workingDirectories": [
    {"directory": "./api", "changeProcessCWD": true},
    {"directory": "./app", "changeProcessCWD": true},
  ],
  "vetur.format.enable": true,
  "vetur.format.defaultFormatter.html": "prettier"
}